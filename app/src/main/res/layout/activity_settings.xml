<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".SettingsActivity">

    <!--hdodennof circle view library-->

    <TextView
        android:id="@+id/settings_gender"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_bio"
        android:layout_alignParentStart="true"
        android:layout_marginStart="127dp"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="6dp"
        android:layout_toStartOf="@+id/settings_gender_btn"
        android:text="Gender"
        android:textAlignment="viewEnd"
        android:textAllCaps="false"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="6pt" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/settings_avatar"
        android:layout_width="176dp"
        android:layout_height="140dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="104dp"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="104dp"
        android:cropToPadding="false"
        tools:src="@tools:sample/avatars"
        tools:srcCompat="@tools:sample/avatars"
        app:civ_border_width="2dp"
        app:civ_border_color="#fff"/>

    <TextView
        android:id="@+id/settings_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/change_avatar_btn"
        android:layout_alignParentStart="true"
        android:layout_marginStart="61dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="3dp"
        android:layout_toStartOf="@+id/settings_name_btn"
        android:text="Display Name"
        android:textAlignment="viewEnd"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/settings_bio"
        android:layout_width="wrap_content"
        android:layout_height="47dp"
        android:layout_below="@+id/settings_location"
        android:layout_alignParentStart="true"
        android:layout_marginStart="72dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="16dp"
        android:layout_toStartOf="@+id/settings_bio_btn"
        android:text="@string/default_bio"
        android:textAlignment="viewStart"
        android:textSize="6pt" />

    <TextView
        android:id="@+id/settings_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_name"
        android:layout_alignParentStart="true"
        android:layout_marginStart="137dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="6dp"
        android:layout_toStartOf="@+id/settings_location_btn"
        android:text="Kuala Lumpur"
        android:textAlignment="viewEnd"
        android:textAllCaps="false"
        android:textSize="6pt"
        android:textStyle="bold" />

    <Button
        android:id="@+id/change_avatar_btn"
        style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
        android:layout_width="127dp"
        android:layout_height="37dp"
        android:layout_below="@+id/settings_avatar"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="119dp"
        android:text="change" />

    <Button
        android:id="@+id/settings_bio_btn"
        style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="159dp"
        android:text="update bio" />

    <ImageButton
        android:id="@+id/settings_name_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/change_avatar_btn"
        android:layout_alignEnd="@+id/settings_bio_btn"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="32dp"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/ic_edit" />

    <ImageButton
        android:id="@+id/settings_location_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/change_avatar_btn"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="82dp"
        android:layout_marginEnd="107dp"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/ic_edit" />

    <ImageButton
        android:id="@+id/settings_gender_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_bio"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="139dp"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/ic_edit" />

</RelativeLayout>