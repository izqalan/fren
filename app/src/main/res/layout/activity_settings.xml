<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".SettingsActivity">

    <!--hdodennof circle view library-->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/settings_avatar"
        android:layout_width="176dp"
        android:layout_height="140dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="104dp"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="104dp"
        android:cropToPadding="false"
        tools:src="@tools:sample/avatars"
        tools:srcCompat="@tools:sample/avatars"
        app:civ_border_width="2dp"
        app:civ_border_color="#fff"/>

    <TextView
        android:id="@+id/settings_name"
        android:layout_width="363dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/change_avatar_btn"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="17dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="4dp"
        android:text="Display Name"
        android:textAlignment="center"
        android:textSize="14pt"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/settings_bio"
        android:layout_width="wrap_content"
        android:layout_height="47dp"
        android:layout_below="@+id/settings_name"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="67dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="166dp"
        android:text="@string/default_bio"
        android:textSize="6pt" />

    <Button
        android:id="@+id/change_avatar_btn"
        style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
        android:layout_width="127dp"
        android:layout_height="37dp"
        android:layout_below="@+id/settings_avatar"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="119dp"
        android:text="change" />

    <Button
        android:id="@+id/settings_bio_btn"
        style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="214dp"
        android:text="update bio" />
</RelativeLayout>