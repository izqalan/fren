<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingBottom="2dp"
    android:paddingTop="3dp">

    <ImageButton
        android:id="@+id/request_approve"
        android:layout_width="58dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/request_name"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-8dp"
        android:layout_marginEnd="19dp"
        android:backgroundTint="@color/fui_bgPhone"
        app:srcCompat="@drawable/ic_check" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/request_avatar"
        android:layout_width="78dp"
        android:layout_height="65dp"
        android:layout_alignTop="@+id/request_name"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-7dp"
        android:src="@drawable/default_avatar" />

    <TextView
        android:id="@+id/request_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="12dp"
        android:text="Name"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/request_type"
        android:layout_width="137dp"
        android:layout_height="29dp"
        android:layout_alignStart="@+id/request_name"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="35dp"
        android:text="this_user wants to collab/be friend you."
        android:textSize="12sp" />

    <ImageButton
        android:id="@+id/request_decline"
        android:layout_width="58dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/request_name"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-8dp"
        android:layout_marginEnd="73dp"
        android:backgroundTint="@color/colorAccent"
        app:srcCompat="@drawable/ic_x" />

</RelativeLayout>