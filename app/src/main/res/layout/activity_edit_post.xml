<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditPostActivity"
    android:background="@color/colorPrimaryDark">


    <RelativeLayout
        android:layout_width="324dp"
        android:layout_height="529dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="0dp"
        android:background="@drawable/white_card">

        <Button
            android:id="@+id/edit_time"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/location"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="2dp"
            android:background="@drawable/set_date_time_btn"
            android:text="set time"
            android:textColor="#fff"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/food_img"
            android:layout_width="101dp"
            android:layout_height="111dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:padding="10dp"
            android:src="@drawable/default_avatar" />

        <EditText
            android:id="@+id/food_name"
            android:layout_width="179dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="13dp"
            android:ems="10"
            android:hint="Food name"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/desc"
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            android:layout_below="@+id/food_name"
            android:layout_alignStart="@+id/food_name"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="-2dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="12dp"
            android:ems="10"
            android:hint="Description"
            android:inputType="textMultiLine"
            android:lines="6"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_below="@+id/desc"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="9dp"
            android:text="Find location"
            android:textSize="18sp" />

        <Button
            android:id="@+id/edit_date"
            android:layout_width="191dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/location"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="13dp"
            android:layout_toStartOf="@+id/edit_time"
            android:background="@drawable/set_date_time_btn"
            android:text="Set Date"
            android:textColor="#fff"/>

        <EditText
            android:id="@+id/num_collab"
            android:layout_width="111dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_date"
            android:layout_alignParentStart="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="12dp"
            android:ems="10"
            android:hint="max num"
            android:inputType="number" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/save_post_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="7dp"
            android:layout_marginBottom="13dp"
            android:clickable="true"
            app:backgroundTint="#5eaec9"
            app:srcCompat="@drawable/ic_edit_check" />

    </RelativeLayout>


</RelativeLayout>